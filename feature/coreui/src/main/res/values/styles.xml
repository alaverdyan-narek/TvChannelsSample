<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.TvChannels" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_grey</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorBackground">@color/main_grey</item>
        <item name="android:statusBarColor">@color/main_grey</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BaseTvChannelInputLayoutStyle">
        <item name="android:textColorHint">@color/nightSeattle</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/nightBrand</item>
        <item name="boxStrokeWidth">@dimen/dp_1</item>
        <item name="expandedHintEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextColor">@color/nightSeattle</item>
        <item name="startIconTint">@color/nightSeattle</item>
        <item name="errorEnabled">false</item>
        <item name="paddingStart">0dp</item>
    </style>
    
    <style name="SearchInputLayoutStyle" parent="BaseTvChannelInputLayoutStyle">
        <item name="startIconDrawable">@drawable/ic_search</item>
        <item name="android:hint">@string/search_hint_channels</item>
    </style>

    <style name="ChannelTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">@dimen/dp_0</item>
        <item name="tabTextAppearance">@style/TextStyleTabSecondary</item>
        <item name="tabSelectedTextAppearance">@style/TextStyleTabSelected</item>
        <item name="tabRippleColor">@null</item>
        <item name="layout_scrollFlags">noScroll</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">fill</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white_50</item>
    </style>
    <style name="TextStyleTabSelected">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:lineSpacingExtra">@dimen/dp_2</item>
    </style>
    <style name="TextStyleTabSecondary">
        <item name="android:textColor">@color/white_50</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:lineSpacingExtra">@dimen/dp_2</item>
    </style>
    <style name="RoundedRadiusSmall">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/dp_4</item>
        <item name="cornerSizeTopLeft">@dimen/dp_4</item>
        <item name="cornerSizeBottomRight">@dimen/dp_4</item>
        <item name="cornerSizeBottomLeft">@dimen/dp_4</item>
    </style>

    <style name="TextStyleRegular3">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:lineSpacingExtra">@dimen/dp_2</item>
    </style>
    <style name="TextStyleMedium2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:lineSpacingExtra">@dimen/dp_2</item>
    </style>

    <style name="TextStyleMedium3">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:lineSpacingExtra">@dimen/dp_2</item>
    </style>
    <style name="LoadingIndicatorStyle" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="android:layout_width">@dimen/dp_60</item>
        <item name="android:layout_height">@dimen/dp_60</item>
        <item name="indicatorSize">@dimen/dp_60</item>
        <item name="indicatorColor">@color/black</item>
        <item name="trackColor">@color/white</item>
        <item name="trackThickness">@dimen/dp_8</item>
        <item name="trackCornerRadius">60dp</item>
        <item name="android:indeterminate">true</item>
    </style>

</resources>